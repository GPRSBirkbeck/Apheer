<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/map1">

    <TextView
        android:id="@+id/welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Apheer!"
        android:fontFamily="sans-serif"
        android:textSize="24dp"
        android:paddingTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/invite_friend_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite a friend"
        android:textSize="24dp"
        android:onClick="inviteFriendEmailButton"
        android:textAllCaps="false"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_textview"
        android:textColor="#fff"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/view_location_on_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See me on a map!"
        android:textSize="24dp"
        android:onClick="seeMeOnMap"
        android:textAllCaps="false"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_friend_email_button"
        android:textColor="#fff"
        android:backgroundTint="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>